<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nunito</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontLabel">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">#4b636e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontTitle">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">#0086c3</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>
</resources>