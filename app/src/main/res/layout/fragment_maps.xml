<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="me.fernandesleite.alagou.ui.MapsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MapsFragment" />
        <com.nambimobile.widgets.efab.ExpandableFabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.nambimobile.widgets.efab.Overlay
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:overlay_color="#000"

                app:overlay_orientation="portrait"/>
            <com.nambimobile.widgets.efab.ExpandableFab
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/bottomAppBar"
                app:efab_closingAnimationDurationMs="10"
                app:efab_orientation="portrait"/>
            <com.nambimobile.widgets.efab.FabOption
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:fab_icon="@drawable/ic_settings_24"
                app:label_text="Configurações"/>
            <com.nambimobile.widgets.efab.FabOption
                android:id="@+id/btn_criar_ponto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_icon="@drawable/ic_add_location_24"
                app:fab_orientation="portrait"
                app:label_text="Criar ponto de alagamento"/>
            <com.nambimobile.widgets.efab.FabOption
                android:id="@+id/btn_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_orientation="portrait"
                app:fab_icon="@drawable/ic_traffic_24"
                app:label_text="Tráfego desativado"/>

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingHorizontal="60dp"
                app:fabAlignmentMode="end"
                style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
                tools:ignore="BottomAppBar">
                <TextView
                    android:id="@+id/bottomAppBarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="100 alagamentos encontrados"/>
            </com.google.android.material.bottomappbar.BottomAppBar>

        </com.nambimobile.widgets.efab.ExpandableFabLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>



